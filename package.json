{
	"name": "@ksuzi/mirai-ui",
	"version": "0.2.0",
	"type": "module",
	"license": "MIT License",
	"description": "A modern React UI components library built with Tailwind CSS",
	"keywords": [
		"react",
		"ui",
		"components",
		"tailwind",
		"typescript"
	],
	"author": "Kseniia Terenko <kseniia.terenko@gmail.com>",
	"homepage": "https://github.com/ksuzi/mirai-ui#readme",
	"bugs": {
		"url": "https://github.com/ksuzi/mirai-ui/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ksuzi/mirai-ui.git"
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.10.0",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"type-check": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:changed": "vitest run --changed",
		"typecheck": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"release": "bumpp && pnpm publish",
		"prepublishOnly": "pnpm run build",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/js": "^9.38.0",
		"@storybook/addon-docs": "9.1.10",
		"@storybook/addon-onboarding": "9.1.10",
		"@storybook/react-vite": "^9.1.10",
		"@tailwindcss/postcss": "^4.1.14",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.15.17",
		"@types/react": "^19.1.3",
		"@types/react-dom": "^19.1.4",
		"@vitejs/plugin-react": "^5.0.0",
		"@vitest/coverage-v8": "^3.1.3",
		"@vitest/ui": "^3.2.4",
		"bumpp": "^10.1.0",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^9.1.2",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"happy-dom": "^17.4.6",
		"prettier": "^3.6.2",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"rollup-plugin-postcss": "^4.0.2",
		"storybook": "^9.1.10",
		"tsdown": "^0.11.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.46.2",
		"vite": "npm:rolldown-vite@latest",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.3"
	},
	"dependencies": {
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"path": "^0.12.7",
		"postcss": "^8.5.6",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.14"
	}
}
